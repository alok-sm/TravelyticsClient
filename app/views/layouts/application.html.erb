<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Travel Api" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Travel Api" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
       <%= render 'layouts/messages' %>
       <%= yield %>
  </body>
</html>
